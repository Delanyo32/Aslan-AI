{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "DOCKERFILE",
      "buildCommand": [
        "git submodule update --init --recursive",
        "docker build -t $RAILWAY_APP_NAME ."
      ]
    },
    "deploy": {
      "healthcheckPath": "/",
      "healthcheckTimeout": 100,
      "restartPolicyType": "never"
    }
  }